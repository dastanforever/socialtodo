{% extends "base.jinja" %}

{% block styles %}
<link rel="stylesheet" type="text/css" href="/css/master.css">
{% endblock %}

{% block navs %}
    <div ng-controller="sidectrl" layout="row" ng-cloak="" style="height:100%;">
  <section  class="sidenav" flex hide-xs hide-sm>
        <md-sidenav class="md-sidenav-left md-whiteframe-z2 sidenavleft" md-component-id="left" md-is-locked-open="$mdMedia('gt-sm')" flex >
            <md-toolbar class="md-theme-dark" id="dashhead">
                <h1 class="md-toolbar-tools">Dashboard</h1>
            </md-toolbar>
            <md-content ng-controller="LeftCtrl">

                <div layout="column" style="padding:0px;margin:0px;" layout-align="center center">
                    <div class="sidenavitems" flex>Home</div>
                    <div class="sidenavitems" flex>Create To Do</div>
                    <div class="sidenavitems" flex>View Calender</div>
                    <div class="sidenavitems" flex>Friends</div>
                    <div class="sidenavitems" flex>Teams</div>
                    <div class="sidenavitems" flex>Help</div>
                </div>
            </md-content>
        </md-sidenav>

    </section>
        <!--<div layout="row" ng-controller="menu" ng-cloak flex="">-->

    <div layout="column" flex>
            <md-content flex style="max-height:70px;">
            <md-toolbar>
              <div class="md-toolbar-tools" layout="row" flex>
                <span hide-gt-sm style="width:60px;"><i class="material-icons">format_align_justify</i></span>
                <div ng-controller="searchbar as sc" flex>
                <md-autocomplete
                    ng-disabled="sc.isDisabled"
                    md-selected-item="sc.selectedItem"
                    md-search-text-change="sc.searchTextChange(sc.searchText)"
                    md-search-text="sc.searchText"
                    md-selected-item-change="sc.selectedItemChange(item)"
                    md-items="item in sc.querySearch(sc.searchText)"
                    md-item-text="item.display"
                    md-min-length="0"
                    placeholder="What is your favorite US state?">
                  <md-item-template>
                    <span md-highlight-text="sc.searchText" md-highlight-flags="^i">{[item.display]}</span>
                  </md-item-template>
                  <md-not-found>
                    No states matching "{[sc.searchText]}" were found.
                    <a ng-click="sc.newState(sc.searchText)">Create a new one!</a>
                  </md-not-found>
                </md-autocomplete>
                </div>

              <div flex layout="row" layout-align="center end">
                <span flex></span>
                <md-menu ng-controller="accountmenu as ctrl" md-offset="0 50"
                md-position-mode="target-right target" layout-align="center end">
                <md-button class="md-icon-button" aria-label="More" ng-click="ctrl.openMenu($mdOpenMenu, ev)" style="margin-right:10px;">
                    <i class="material-icons">format_align_justify</i>
                </md-button>
                <md-menu-content width="3">
                <md-menu-item ng-repeat="item in ['Settings', 'Help', 'Logout']">
                    <md-button ng-click="ctrl.announceClick($index)">
                    <div layout="row">
                        <p flex>{[item]}</p>
                    </div>
                    </md-button>
                </md-menu-item>
                </md-menu-content>
                </md-menu>
              </div>
              </div>
            </md-toolbar>
            </md-content>
        <!--</div>-->

        <div flex>
        {% block contents%}
        {% endblock%}
        </div>

    </div>
    </div>

{% endblock %}

{% block scripts%}
<script type="text/javascript" src="/javascript/controllers/master.js"></script>
{% endblock %}